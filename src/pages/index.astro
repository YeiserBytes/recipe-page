---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import PrepareTime from "../components/PrepareTime.astro";
import Ingredients from "../components/Ingredients.astro";
import Instructions from "../components/Instructions.astro";
import Nutrition from "../components/Nutrition.astro";

import prepareTime from "../data/prepareTime.json";
import ingredients from "../data/ingredients.json";
import instruction from "../data/instruction.json";
import nutrition from "../data/nutrition.json";
---

<Layout title="Frontend Mentor | Recipe page" description="A website showcasing a simple omelette recipe. This easy and quick dish is perfect for any meal. The classic omelette combines beaten eggs cooked to perfection, optionally filled with your choice of cheese, vegetables, or meats. Explore the preparation time, ingredients, instructions, and nutrition information for this delicious recipe.">
  <Card
    title="Simple Omelette Recipe"
    description="An easy and quick dish, perfect for any meal. This classic omelette combines beaten eggs cooked to perfection, optionally filled with your choice of cheese, vegetables, or meats."
    image="/images/image-omelette.avif"
  >
    <PrepareTime title="Preparation time" list={prepareTime} />
    <Ingredients title="Ingredients" list={ingredients} />
    <hr class="border-light-grey" />
    <Instructions title="Instructions" list={instruction} />
    <hr class="border-light-grey" />
    <Nutrition
      title="Nutrition"
      description="The table below shows nutritional values per serving without the additional fillings."
      list={nutrition}
    />
  </Card>
</Layout>
</Layout>
