---
import { Image } from "astro:assets";

interface Props {
  title: string;
  description: string;
  image?: string;
}

const { title, description, image } = Astro.props;
---

<section class="bg-white w-full min-h-[100dvh] md:rounded-3xl md:p-10">
  {
    image && (
      <Image
        height={600}
        width={1312}
        class="md:rounded-xl w-full object-cover"
        src={image}
        alt={title}
        title={`${title.split(" ")[1]} dish`}
        loading={"eager"}
      />
    )
  }

  <article class="pt-10 flex flex-col text-dark-charcoal gap-7 max-md:p-10">
    <h1 class="text-5xl font-young">{title}</h1>
    <p class="font-outfit text-wenge-brown">{description}</p>
    <slot />
  </article>
</section>
